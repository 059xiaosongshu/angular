{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../../../dist/js/cjs/angular2/",
    "paths": {
      "angular2/core": ["../../../../dist/js/cjs/angular2/core.d.ts"],
      "angular2/src/common/*": ["./*"],
      "angular2/src/core/*": ["../../../../dist/js/cjs/angular2/src/core/*"],
      "angular2/src/facade/*": ["../../../../dist/js/cjs/angular2/src/facade/*"],
      // facade/intl facade is specific to the common barrel so we need to include it in our
      // dependency graph rather than rely on the core barrel to provide it's d.ts file
      "angular2/src/facade/intl": ["../facade/intl"]
    },
    "rootDir": "../../",
    "sourceMap": true,
    "sourceRoot": ".",
    "target": "es5"
  },
  "files": [
    "../../common.ts",
    "../../ambient_typings.d.ts"
  ]
}
